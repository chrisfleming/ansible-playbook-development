---
extends: default

ignore:
  - .ansible/
  - node_modules/

rules:
  line-length:
    max: 160
    level: warning
  truthy:
    allowed-values: ["true", "false", "yes", "no"]
  document-start:
    level: warning
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
